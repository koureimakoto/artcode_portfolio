{
  "name": "website",
  "version": "0.0.0",
  "description": "My personal portfolio",
  "main": "index.ts",
  "scripts": {
    "css:dev"  : "postcss   ./src/style.pcss -o ./css/style.min.css --watch",
    "css:build": "postcss ./src/style.pcss -o ./css/style.min.css --minify",
    "dev"    :  "trunk serve",
    "release:soft": "trunk build --release",
    "release:hard": "trunk build --release && wasm-opt -O3 ./dist/*.wasm -o ./dist/*.wasm",
    "test:jest": "jest --watchAll",
    "test:wasm": "cargo test --target wasm32-unknown-unknown",
    "test:rust": "cargo test"
  },
  "author": "Talles Fagundes",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.2.233",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "eslint": "^8.22.0",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-css-variables": "^0.18.0",
    "postcss-import": "^14.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-mixins": "^9.0.3",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.0",
    "postcss-simple-vars": "^6.0.3",
    "postcss-utilities": "^0.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4"
  }
}
